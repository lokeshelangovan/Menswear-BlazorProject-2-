@page "/Payment"

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../CSS/payment.css">
</head>
<body>
    <div class="row">
        <div class="col-75">
          <div class="container">
            <form action="/action_page.php">
                    <div class="col-50">
                        <h3>Payment Method</h3>
                        <label for="fname">Accepted Cards</label>
                        <div class="icon-container">
                            <i class="fa fa-cc-visa" style="color:navy;"><img src="./css/visa.jpg" alt="visa" width="10%" height="10%"></i>
                            <i class="fa fa-cc-amex" style="color:blue;"><img src="./css/net banking.jpg" alt="Net banking" width="10%" height="10%"></i>
                            <i class="fa fa-cc-mastercard" style="color:red;"><img src="./css/emi.jpg" alt="EMI" width="10%" height="10%"></i>
                            <i class="fa fa-cc-discover" style="color:orange;"></i>
                        </div>
                        <label for="cname">Name on Card</label>
                        <input type="text" id="cname" name="cardname" @bind="num1" @bind:event="oninput" placeholder="John More Doe">
                        <label for="ccnum">Credit card number</label>
                        <input type="text" id="ccnum" name="cardnumber" @bind="num2" @bind:event="oninput" placeholder="1111-2222-3333-4444">
                        <label for="expmonth">Exp Month</label>
                        <input type="text" id="expmonth" name="expmonth" value="@((num1 + num2).ToString())" placeholder="September">

                        <div class="row">
                            <div class="col-50">
                                <label for="expyear">Exp Year</label>
                                <input type="text" id="expyear" name="expyear" placeholder="2018">
                            </div>
                            <div class="col-50">
                                <label for="cvv">CVV</label>
                                <input type="text" id="cvv" name="cvv" placeholder="352">
                            </div>
                        </div>
                    </div>

                  
                     <label>
                       <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                     </label>
                       <input type="submit" value="Continue to checkout" class="btn">
               
           </form>
          </div>
        </div>
     </div> 
</body>

@code {
  int num1;
int num2;
}
